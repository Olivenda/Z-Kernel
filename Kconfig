mainmenu "Linux Kernel Configuration"

menu "General System Configuration"

config LOCALVERSION
    string "Local version suffix"
    default ""
    help
      Optional local suffix appended to the kernel release string.

config DEFAULT_HOSTNAME
    string "Default hostname"
    default "zkernel"
    help
      Hostname used if none is supplied by userland.

config USE_GRUB
    bool "Build bootable GRUB-mkrescue ISO"
    default y
    help
      When enabled, a GRUB-mkrescue ISO image is generated.

config ENABLE_BIN
    bool "Generate raw kernel binary"
    default y
    help
      Produce a flat binary alongside the ELF kernel.

config GENERATE_MAP
    bool "Generate linker map file"
    default y
    help
      Emit a linker map for symbol inspection.

config BOOT_BANNER
    bool "Print boot banner"
    default y
    help
      Show a boot banner before other log messages.

config LOG_ROOTFS
    bool "Log root filesystem contents"
    default y
    help
      Initialize the bundled rootfs and print its entries.

config CUSTOM_CFLAGS
    string "Additional compiler flags"
    default ""
    help
      Extra flags appended to the default kernel CFLAGS.

config OPT_LEVEL
    string "Optimization level"
    default "O2"
    help
      GCC optimization level (e.g. O0, O1, O2, O3).

endmenu


menu "Module & Block Layer Options"

config MODULES
    bool "Loadable module support (stub)"
    default n
    help
      Stub option matching classic menuconfig layout.

config BLOCK
    bool "Block layer (stub)"
    default y
    help
      Placeholder representing block device support.

endmenu


menu "CPU & Architecture Options"

config HELLO
    bool "Enable Hello World message"
    default y
    help
      Print a hello message from the kernel entry point.

choice
    prompt "Hello language"
    default LANG_EN

config LANG_EN
    bool "English"

config LANG_DE
    bool "German"

endchoice

config ENABLE_PAGING
    bool "Enable paging"
    default n
    help
      Placeholder for future paging/MMU features.

endmenu


menu "Memory & RAM Options"

config LOG_MEMORY_MAP
    bool "Log usable memory map"
    default y
    help
      Log Stivale2 memory ranges detected at boot.

config HEAP_DEMO
    bool "Allocate demo heap page"
    default y
    help
      Allocate and report a demo page from the bump allocator.

config MEM_TEST_PATTERN
    bool "Emit memory test pattern"
    default n
    help
      Placeholder for simple memory diagnostic patterns.

endmenu


